<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/assignment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment Name"
                android:textSize="@dimen/formTextSize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/assignment_name"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assignment_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Septenber 28, 1998"
                    android:textSize="@dimen/formTextSize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/assignment_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="19:00"
                    android:textSize="@dimen/formTextSize"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <TextView
                android:id="@+id/assignment_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textSize="@dimen/formTextSize"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>